<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.purdue.cleopold.MainActivity" >

    <!-- TODO your layout here -->

    <Button
        android:id="@+id/bu_start_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@color/salmon"
        android:gravity="center"
        android:minHeight="60dp"
        android:minWidth="150dp"
        android:padding="@dimen/padding"
        android:text="@string/start_over"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/message1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Successfully connected to server!"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bu_start_over"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="@color/light_grey"
        android:gravity="center"
        android:text="Congratulations! A match has been found."
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/title_size"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/message1"
        android:layout_below="@+id/message5"
        android:layout_marginTop="42dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/message5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/message2"
        android:layout_below="@+id/message1"
        android:layout_marginTop="35dp"
        android:text="Waiting for a match..."
        android:textColor="@color/white"
        android:textSize="@dimen/textsize"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/message3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/message2"
        android:layout_alignTop="@+id/message2"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size"
        android:visibility="invisible" />

</RelativeLayout>